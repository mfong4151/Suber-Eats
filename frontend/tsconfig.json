{
    "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "es2015", "es2016", "es2017"],
      "jsx": "react",
      "module": "commonjs",
      "esModuleInterop": true,
      "sourceMap": true,
      "strict": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "outDir": "./dist",
      "declaration": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.spec.tsx"]
  }
  